<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Start Localization"
            android:id="@+id/textView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initial Belief"
            android:id="@+id/btnInitial"
            android:layout_above="@+id/btnsenseap" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sense New AP"
            android:id="@+id/btnsenseap" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sense New Scan"
            android:id="@+id/btnsensenew" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_toRightOf="@+id/btnsenseap"
            android:layout_alignTop="@+id/btnsenseap"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/floor9"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_alignRight="@+id/btnsensenew"
            android:layout_alignEnd="@+id/btnsensenew"
            android:layout_above="@+id/btnInitial" android:layout_below="@+id/textView"/>
</RelativeLayout>



